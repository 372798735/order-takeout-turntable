/**profile.wxss**/
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 25rpx;
  padding: 25rpx;
  max-width: 100%;
  box-sizing: border-box;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
  min-width: 120rpx;
}

/* 更换头像按钮样式 */
.avatar-section .btn {
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #f0f0f0;
}

.user-details {
  /* flex: 1;
  display: flex;
  flex-direction: column; */
  gap: 12rpx;
  min-width: 0;
  overflow: hidden;
  align-items: flex-start;
}

.nickname-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 12rpx;
  width: 100%;
}

.nickname {
  padding-bottom: 5px;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  text-align: left;
}

.user-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 编辑昵称按钮样式 */
.nickname-section .btn {
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
  width: 300rpx;
}

/* 统计数据 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #6750a4;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单列表 */
.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(0, 0, 0, 0.05);
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 16rpx;
  font-size: 32rpx;
}

.menu-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.menu-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.menu-desc {
  font-size: 24rpx;
  color: #666;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 关于信息 */
.about-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.about-item {
  display: flex;
  align-items: center;
}

.about-label {
  font-size: 26rpx;
  color: #666;
  min-width: 180rpx;
}

.about-value {
  font-size: 26rpx;
  color: #333;
}

.about-actions {
  display: flex;
  gap: 20rpx;
}

.about-actions .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  display: none;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  display: block;
}

.modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  margin: 300rpx auto 0rpx;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 44rpx !important;
  height: 44rpx;
  border-radius: 50%;
  background: #f5f5f5;
  color: #999;
  font-size: 20rpx;
  font-weight: normal;
  line-height: 1;
  padding: 0;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.2s ease;
  min-width: 44rpx;
  min-height: 44rpx;
  box-sizing: border-box;
  text-align: center;
  vertical-align: middle;
  font-family: Arial, sans-serif;
  margin-left: 360rpx !important;
}

.modal-body {
  padding: 30rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  transition: border-color 0.2s ease;
  -webkit-appearance: none;
  -webkit-tap-highlight-color: transparent;
  line-height: 1.4;
}

.input:focus {
  border-color: #007aff;
  outline: none;
  -webkit-appearance: none;
}

.input::placeholder {
  color: #999;
  opacity: 1;
  -webkit-text-fill-color: #999;
}

.input::-webkit-input-placeholder {
  color: #999;
  opacity: 1;
}

.input::-moz-placeholder {
  color: #999;
  opacity: 1;
}

.input:-ms-input-placeholder {
  color: #999;
  opacity: 1;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }

  .user-info {
    padding: 20rpx;
    gap: 20rpx;
  }

  .avatar-section {
    min-width: 100rpx;
  }

  .avatar {
    width: 90rpx;
    height: 90rpx;
  }

  .nickname {
    font-size: 28rpx;
  }

  .user-desc {
    font-size: 20rpx;
  }

  /* 按钮响应式样式 */
  .avatar-section .btn,
  .nickname-section .btn {
    min-width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 20rpx;
    padding: 0 15rpx;
    box-sizing: border-box;
  }

  .stats-grid {
    gap: 20rpx;
  }

  .stat-item {
    padding: 25rpx;
  }

  .stat-number {
    font-size: 40rpx;
  }

  .stat-label {
    font-size: 22rpx;
  }

  .menu-item {
    padding: 25rpx 0;
  }

  .menu-icon {
    width: 70rpx;
    height: 70rpx;
    font-size: 28rpx;
  }

  .menu-title {
    font-size: 26rpx;
  }

  .menu-desc {
    font-size: 22rpx;
  }

  .about-label {
    font-size: 24rpx;
    min-width: 150rpx;
  }

  .about-value {
    font-size: 24rpx;
  }

  .about-actions .btn {
    height: 70rpx;
    line-height: 70rpx;
    font-size: 26rpx;
  }

  .modal-content {
    margin: 0 30rpx;
    width: calc(100% - 60rpx);
  }

  .modal-header,
  .modal-body,
  .modal-footer {
    padding: 25rpx;
  }

  .modal-title {
    font-size: 28rpx;
  }

  .form-label {
    font-size: 26rpx;
  }

  .modal-close {
    width: 40rpx;
    height: 40rpx;
    font-size: 18rpx;
    min-width: 40rpx;
    min-height: 40rpx;
  }

  .input {
    height: 70rpx;
    font-size: 26rpx;
    padding: 0 15rpx;
  }
}

/* 超小屏幕适配 */
@media (max-width: 600rpx) {
  .user-info {
    padding: 15rpx;
    gap: 15rpx;
  }

  .avatar-section {
    min-width: 80rpx;
  }

  .avatar {
    width: 80rpx;
    height: 80rpx;
  }

  .nickname {
    font-size: 26rpx;
  }

  .user-desc {
    font-size: 18rpx;
  }

  .nickname-section {
    gap: 10rpx;
  }

  /* 超小屏幕按钮样式 */
  .avatar-section .btn,
  .nickname-section .btn {
    min-width: 90rpx;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 18rpx;
    padding: 0 12rpx;
    box-sizing: border-box;
  }

  .modal-close {
    width: 36rpx;
    height: 36rpx;
    font-size: 16rpx;
    min-width: 36rpx;
    min-height: 36rpx;
  }

  .input {
    height: 65rpx;
    font-size: 24rpx;
    padding: 0 12rpx;
  }
}
