/**login.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-content {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 10rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 登录卡片 */
.login-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.card-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.card-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.card-body {
  padding: 30rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #6750a4 0%, #7c4dff 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(103, 80, 164, 0.4);
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(103, 80, 164, 0.4);
}

.btn-icon {
  font-size: 36rpx;
}

/* 用户信息显示 */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid white;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.user-status {
  font-size: 24rpx;
  color: #4caf50;
}

/* 功能介绍 */
.features {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
  margin-bottom: 40rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f4ff 0%, #e8f2ff 100%);
  border-radius: 12rpx;
  font-size: 28rpx;
  flex-shrink: 0;
}

.feature-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.feature-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.feature-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
}

/* 隐私说明 */
.privacy-notice {
  text-align: center;
  padding: 0 20rpx;
}

.privacy-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
}

.privacy-link {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  margin: 0 40rpx;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
  padding-bottom: 20px;
}

.modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  color: #666;
  font-size: 36rpx;
  line-height: 1;
  padding: 0;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 0;
}

.policy-content {
  height: 400rpx;
  padding: 30rpx;
}

.policy-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-line;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 30rpx;
  }

  .login-content {
    gap: 30rpx;
  }

  .logo {
    font-size: 100rpx;
  }

  .app-name {
    font-size: 40rpx;
  }

  .app-desc {
    font-size: 24rpx;
  }

  .card-header {
    padding: 30rpx 25rpx 15rpx;
  }

  .card-title {
    font-size: 32rpx;
  }

  .card-subtitle {
    font-size: 22rpx;
  }

  .card-body {
    padding: 25rpx;
  }

  .login-btn {
    height: 90rpx;
    font-size: 28rpx;
  }

  .btn-icon {
    font-size: 32rpx;
  }

  .user-info {
    padding: 25rpx;
  }

  .user-avatar {
    width: 70rpx;
    height: 70rpx;
  }

  .user-name {
    font-size: 26rpx;
  }

  .user-status {
    font-size: 22rpx;
  }

  .features {
    gap: 20rpx;
    margin-bottom: 30rpx;
  }

  .feature-icon {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }

  .feature-title {
    font-size: 24rpx;
  }

  .feature-desc {
    font-size: 20rpx;
  }

  .action-buttons .btn {
    height: 70rpx;
    line-height: 70rpx;
    font-size: 26rpx;
  }

  .privacy-text {
    font-size: 20rpx;
  }

  .modal-content {
    margin: 0 30rpx;
    width: calc(100% - 60rpx);
  }

  .modal-header,
  .modal-footer {
    padding: 25rpx;
  }

  .policy-content {
    height: 350rpx;
    padding: 25rpx;
  }

  .policy-text {
    font-size: 24rpx;
  }
}
