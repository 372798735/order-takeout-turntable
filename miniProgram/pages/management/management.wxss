/**management.wxss**/
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  box-sizing: border-box;
  max-width: 100vw;
  overflow-x: hidden;
}

.section {
  margin-bottom: 30rpx;
}

/* 按钮样式 */
.btn-sm {
  padding: 20rpx 12rpx;
  font-size: 25rpx;
  height: auto;
  line-height: 1.2;
  min-width: 50rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.btn-xs {
  padding: 24rpx 12rpx;
  font-size: 25rpx;
  height: 28rpx;
  line-height: 1;
  min-width: 100rpx;
  max-width: 56rpx;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.btn-danger {
  background: #ff4757;
  color: white;
}

.btn-danger:active {
  background: #ff3838;
}

/* 套餐列表 */
.set-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.set-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.set-item.active {
  background: rgba(103, 80, 164, 0.1);
  border-color: #6750a4;
}

.set-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
  overflow: hidden;
}

.set-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.set-count {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

.set-actions {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex-shrink: 0;
  align-items: center;
  justify-content: center;
}

/* 选项列表 */
.item-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.item-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 0;
  overflow: hidden;
}

.item-color {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.item-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
  overflow: hidden;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-id {
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  font-family: monospace;
}

.item-actions {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex-shrink: 0;
  align-items: center;
  justify-content: center;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  display: none;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  display: block;
}

.modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  margin: 0 40rpx;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
  margin: 200rpx auto;
}

.modal.show .modal-content {
  transform: scale(1);
  padding-bottom:50rpx;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  min-height: 60rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 44rpx !important;
  right: -80px;
  height: 44rpx;
  border-radius: 50%;
  background: #f5f5f5;
  color: #999;
  font-size: 20rpx;
  font-weight: normal;
  line-height: 1;
  padding: 0;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.2s ease;
  min-width: 44rpx;
  min-height: 44rpx;
  box-sizing: border-box;
  text-align: center;
  vertical-align: middle;
  font-family: Arial, sans-serif;
}

.modal-close:active {
  background: #e0e0e0;
  color: #666;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 30rpx 50rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  /* box-sizing: border-box;
  transition: border-color 0.2s ease;
  -webkit-appearance: none;
  -webkit-tap-highlight-color: transparent; */
  line-height: 1.4;
}

.input:focus {
  border-color: #007aff;
  outline: none;
  -webkit-appearance: none;
}

.input::placeholder {
  color: #999;
  opacity: 1;
  -webkit-text-fill-color: #999;
}

.input::-webkit-input-placeholder {
  color: #999;
  opacity: 1;
}

.input::-moz-placeholder {
  color: #999;
  opacity: 1;
}

.input:-ms-input-placeholder {
  color: #999;
  opacity: 1;
}

.textarea {
  min-height: 120rpx;
  resize: none;
}

/* 颜色选择器 */
.color-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  cursor: pointer;
  transition: all 0.3s ease;
}

.color-option.selected {
  border-color: #6750a4;
  transform: scale(1.1);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }

  .set-item,
  .item-row {
    padding: 20rpx;
    flex-direction: column;
    align-items: flex-start;
    gap: 15rpx;
  }

  .set-info,
  .item-info {
    width: 100%;
  }

  .set-actions {
    width: 100%;
    justify-content: center;
    gap: 4rpx;
    flex-direction: column;
  }

  .item-actions {
    width: 100%;
    justify-content: center;
    gap: 4rpx;
    flex-direction: column;
  }

  .set-actions .btn,
  .item-actions .btn {
    min-width: 50rpx;
    font-size: 18rpx;
    padding: 6rpx 10rpx;
  }

  .btn-xs {
    padding: 5rpx 10rpx;
    font-size: 16rpx;
    height: 24rpx;
    min-width: 50rpx;
    max-width: 50rpx;
  }

  .modal-content {
    margin: 0 20rpx;
    width: calc(100% - 40rpx);
  }

  .modal-header,
  .modal-body {
    padding: 25rpx;
  }

  .modal-footer {
    padding: 25rpx 25rpx 40rpx 25rpx;
  }

  .modal-title {
    font-size: 28rpx;
  }

  .form-label {
    font-size: 26rpx;
  }

  .input {
    height: 70rpx;
    font-size: 26rpx;
    padding: 0 15rpx;
  }

  .modal-close {
    width: 40rpx;
    height: 40rpx;
    font-size: 18rpx;
    min-width: 40rpx;
    min-height: 40rpx;
  }

  .color-option {
    width: 50rpx;
    height: 50rpx;
  }

  .color-picker {
    gap: 15rpx;
  }
}

/* 调试信息样式 */
.debug-info {
  padding: 10rpx 20rpx;
  background-color: #f0f8ff;
  border-left: 4rpx solid #007aff;
  margin: 10rpx 0;
}

.debug-text {
  font-size: 24rpx;
  color: #007aff;
}

/* 存储管理样式 */
.storage-info {
  margin-bottom: 30rpx;
}

.storage-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.storage-item:last-child {
  border-bottom: none;
}

.storage-label {
  font-size: 28rpx;
  color: #333;
}

.storage-value {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.storage-actions {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.storage-actions .btn {
  flex: 1;
  min-width: 120rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .storage-actions {
    flex-direction: column;
  }

  .storage-actions .btn {
    width: 100%;
  }
}

/* 超小屏幕适配 */
@media (max-width: 600rpx) {
  .container {
    padding: 10rpx;
  }

  .set-item,
  .item-row {
    padding: 15rpx;
  }

  .set-name {
    font-size: 28rpx;
  }

  .item-name {
    font-size: 26rpx;
  }

  .item-description {
    font-size: 22rpx;
  }

  .item-id {
    font-size: 18rpx;
  }

  .modal-content {
    margin: 0 15rpx;
    width: calc(100% - 30rpx);
  }

  .modal-header,
  .modal-body {
    padding: 20rpx;
  }

  .modal-footer {
    padding: 20rpx 20rpx 35rpx 20rpx;
  }

  .input {
    height: 65rpx;
    font-size: 24rpx;
    padding: 0 12rpx;
  }

  .modal-close {
    width: 36rpx;
    height: 36rpx;
    font-size: 16rpx;
    min-width: 36rpx;
    min-height: 36rpx;
  }

  .btn-sm {
    padding: 4rpx 8rpx;
    font-size: 25rpx;
    min-width: 40rpx;
    margin-top: 30rpx;
  }

  .btn-xs {
    padding: 4rpx 8rpx;
    font-size: 14rpx;
    height: 22rpx;
    min-width: 44rpx;
    max-width: 44rpx;
  }
}
