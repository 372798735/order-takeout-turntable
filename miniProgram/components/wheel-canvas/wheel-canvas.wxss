/* components/wheel-canvas/wheel-canvas.wxss */

/* 主容器 */
.wheel-container {
  position: relative;
  width: 100%;
  max-width: 580rpx;
  height: 100%;
  max-height: 580rpx;
  aspect-ratio: 1 / 1;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 转盘容器 */
.wheel-wrap {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  outline: none;
}

/* 转盘Canvas */
.wheel-canvas {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.16);
  transition:
    transform 0.4s ease,
    box-shadow 0.4s ease;
  display: block;
  background: transparent;
  border: none;
  outline: none;
}

.wheel-canvas.spinning {
  box-shadow: 0 32rpx 64rpx rgba(0, 0, 0, 0.2);
}

/* 粒子特效Canvas */
.particle-canvas {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
  z-index: 10;
  border-radius: 50%;
  background: transparent;
  border: none;
  outline: none;
}

/* 指针容器 */
.pointer-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 20;
}

/* 指针 */
.pointer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

/* 三角形指针 */
.pointer-triangle {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-left: 24rpx solid transparent;
  border-right: 24rpx solid transparent;
  border-bottom: 36rpx solid #6750a4;
  transform: translate(-50%, -80rpx) translateZ(0);
  -webkit-transform: translate(-50%, -80rpx) translateZ(0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  will-change: transform;
  z-index: 21;
}

.glow .pointer-triangle {
  border-bottom-color: #7c5ce8;
}

.pointer-active .pointer-triangle {
  border-bottom-color: #8b5cf6;
  transform: translate(-50%, -88rpx) translateZ(0);
  -webkit-transform: translate(-50%, -88rpx) translateZ(0);
}

/* 中心按钮容器 */
.hub-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 30;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 中心GO按钮 */
.hub {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  pointer-events: auto;
  -webkit-user-select: none;
  user-select: none;
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: transparent;
  will-change: transform;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

/* GO按钮 */
.hub-button {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: transparent;
  z-index: 1000;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  will-change: transform;
}

/* 中心图片 */
.center-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: block;
  -webkit-user-select: none;
  user-select: none;
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: transparent;
  position: relative;
  z-index: 1001;
}

/* 备用文字按钮 */
.center-fallback {
  position: absolute;
  top: 0;
  left: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #6750a4, #7c5ce8);
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1002;
  -webkit-user-select: none;
  user-select: none;
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: transparent;
  box-shadow: 0 4rpx 12rpx rgba(103, 80, 164, 0.3);
}

/* 外圈环 */
.hub-ring {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 6rpx solid rgba(103, 80, 164, 0.25);
  box-sizing: border-box;
  z-index: 998;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

.hub.breathing .hub-button {
  opacity: 0.9;
}

/* 获胜者遮罩容器 */
.winner-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 15;
}

/* 获胜者高亮遮罩 */
.winner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.8s ease;
  border-radius: 50%;
}

.winner-overlay.active {
  opacity: 1;
}

.winner-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  background: radial-gradient(
    circle at center,
    rgba(255, 255, 255, 0.05) 0%,
    rgba(255, 255, 255, 0.1) 30%,
    rgba(255, 255, 255, 0.05) 50%,
    transparent 70%
  );
  animation: winner-pulse 2s ease-in-out infinite;
}

/* 特效层容器 */
.effects-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 10;
}

/* 特效层 */
.effects-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  opacity: 0;
  transition: opacity 1s ease;
}

.effects-layer.active {
  opacity: 1;
}

/* 脉冲环 */
.pulse-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20%;
  height: 20%;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow:
    0 0 0 0 rgba(103, 80, 164, 0.25),
    0 0 0 0 rgba(103, 80, 164, 0.15),
    0 0 0 0 rgba(103, 80, 164, 0.1);
  animation: pulse-ring 1.6s ease-out infinite;
}

/* 闪光效果 */
.sparkles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
}

.sparkle {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: #ffd700;
  border-radius: 50%;
  animation: sparkle 2s ease-in-out infinite;
  box-shadow: 0 0 16rpx rgba(255, 215, 0, 0.8);
}

.sparkle:nth-child(1) {
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
}
.sparkle:nth-child(2) {
  top: 20%;
  right: 20%;
}
.sparkle:nth-child(3) {
  top: 50%;
  right: 10%;
}
.sparkle:nth-child(4) {
  bottom: 20%;
  right: 20%;
}
.sparkle:nth-child(5) {
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
}
.sparkle:nth-child(6) {
  bottom: 20%;
  left: 20%;
}
.sparkle:nth-child(7) {
  top: 50%;
  left: 10%;
}
.sparkle:nth-child(8) {
  top: 20%;
  left: 20%;
}
.sparkle:nth-child(9) {
  top: 30%;
  right: 30%;
}
.sparkle:nth-child(10) {
  bottom: 30%;
  right: 30%;
}
.sparkle:nth-child(11) {
  bottom: 30%;
  left: 30%;
}
.sparkle:nth-child(12) {
  top: 30%;
  left: 30%;
}

.sparkle:nth-child(odd) {
  background: #ff6b6b;
  box-shadow: 0 0 16rpx rgba(255, 107, 107, 0.8);
}

.sparkle:nth-child(3n) {
  background: #4ecdc4;
  box-shadow: 0 0 16rpx rgba(78, 205, 196, 0.8);
}

/* 光线效果 */
.light-rays {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
}

.ray {
  position: absolute;
  bottom: 50%;
  left: 50%;
  width: 6rpx;
  height: 58%;
  background: linear-gradient(
    to top,
    transparent,
    rgba(255, 215, 0, 0.6),
    rgba(255, 215, 0, 0.8),
    rgba(255, 215, 0, 0.6),
    transparent
  );
  transform-origin: center bottom;
  transform: translate(-50%, 0) rotate(var(--angle));
  animation: ray 4s ease-in-out infinite;
  border-radius: 4rpx;
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.4);
}

/* 动画定义 */
@keyframes breathe {
  0%,
  100% {
    transform: scale(1);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.06);
    opacity: 1;
  }
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

@keyframes pulse-ring {
  0% {
    box-shadow:
      0 0 0 0 rgba(103, 80, 164, 0.35),
      0 0 0 0 rgba(103, 80, 164, 0.2),
      0 0 0 0 rgba(103, 80, 164, 0.1);
  }
  70% {
    box-shadow:
      0 0 0 36rpx rgba(103, 80, 164, 0),
      0 0 0 72rpx rgba(103, 80, 164, 0.06),
      0 0 0 108rpx rgba(103, 80, 164, 0.02);
  }
  100% {
    box-shadow:
      0 0 0 0 rgba(103, 80, 164, 0),
      0 0 0 0 rgba(103, 80, 164, 0),
      0 0 0 0 rgba(103, 80, 164, 0);
  }
}

@keyframes sparkle {
  0%,
  100% {
    opacity: 0;
    transform: scale(0) rotate(0deg);
  }
  50% {
    opacity: 1;
    transform: scale(1.2) rotate(180deg);
  }
}

@keyframes ray {
  0%,
  100% {
    opacity: 0;
    transform: translate(-50%, 0) rotate(var(--angle)) scaleY(0);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, 0) rotate(var(--angle)) scaleY(1.1);
  }
}

@keyframes winner-pulse {
  0%,
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.6;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.05);
    opacity: 0.9;
  }
}

/* 响应式调整 */
@media screen and (max-width: 768rpx) {
  .wheel-wrap {
    max-width: 450rpx;
    max-height: 450rpx;
  }

  .sparkle {
    width: 8rpx;
    height: 8rpx;
  }

  .ray {
    width: 4rpx;
    height: 54%;
  }
}

@media screen and (max-width: 480rpx) {
  .wheel-wrap {
    max-width: 380rpx;
    max-height: 380rpx;
  }

  .sparkle {
    width: 6rpx;
    height: 6rpx;
  }

  .ray {
    width: 2rpx;
    height: 50%;
  }
}
