/* 小程序通用样式修复 */

/* 修复小程序中的一些样式问题 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 修复小程序中button的默认样式 */
button::after {
  border: none;
}

button {
  background: none;
  padding: 0;
  margin: 0;
  border: none;
  outline: none;
  font-size: inherit;
  line-height: inherit;
}

/* 修复input在小程序中的样式 */
input {
  width: 100%;
  box-sizing: border-box;
}

/* 修复textarea在小程序中的样式 */
textarea {
  width: 100%;
  box-sizing: border-box;
}

/* 修复picker在小程序中的样式 */
picker {
  width: 100%;
}

/* 修复scroll-view的样式 */
scroll-view {
  width: 100%;
  height: 100%;
}

/* 修复canvas在小程序中的样式 */
canvas {
  display: block;
  width: 100%;
  height: 100%;
}

/* 修复image在小程序中的样式 */
image {
  display: block;
  width: 100%;
  height: 100%;
}

/* 小程序特有的样式类 */
.wx-button-hover {
  opacity: 0.7;
}

/* 修复小程序中的flex布局问题 */
.flex-fix {
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.flex-fix > view {
  flex-shrink: 0;
}

/* 小程序中的阴影效果优化 */
.shadow-light {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.shadow-medium {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.shadow-heavy {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

/* 小程序中的圆角优化 */
.rounded-small {
  border-radius: 8rpx;
}

.rounded-medium {
  border-radius: 16rpx;
}

.rounded-large {
  border-radius: 24rpx;
}

.rounded-full {
  border-radius: 50%;
}

/* 小程序中的间距优化 */
.spacing-xs {
  padding: 8rpx;
}

.spacing-sm {
  padding: 16rpx;
}

.spacing-md {
  padding: 24rpx;
}

.spacing-lg {
  padding: 32rpx;
}

.spacing-xl {
  padding: 40rpx;
}

/* 小程序中的文字大小优化 */
.text-xs {
  font-size: 20rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-base {
  font-size: 28rpx;
}

.text-lg {
  font-size: 32rpx;
}

.text-xl {
  font-size: 36rpx;
}

.text-2xl {
  font-size: 40rpx;
}

/* 小程序中的颜色优化 */
.text-primary {
  color: #6750a4;
}

.text-secondary {
  color: #666;
}

.text-success {
  color: #4caf50;
}

.text-warning {
  color: #ff9800;
}

.text-danger {
  color: #f44336;
}

.text-white {
  color: #fff;
}

.text-black {
  color: #333;
}

/* 背景色 */
.bg-primary {
  background-color: #6750a4;
}

.bg-secondary {
  background-color: #f5f5f5;
}

.bg-success {
  background-color: #4caf50;
}

.bg-warning {
  background-color: #ff9800;
}

.bg-danger {
  background-color: #f44336;
}

.bg-white {
  background-color: #fff;
}

.bg-transparent {
  background-color: transparent;
}

/* 小程序中的动画优化 */
.transition-all {
  transition: all 0.3s ease;
}

.transition-transform {
  transition: transform 0.3s ease;
}

.transition-opacity {
  transition: opacity 0.3s ease;
}

/* 小程序中的定位优化 */
.relative {
  position: relative;
}

.absolute {
  position: absolute;
}

.fixed {
  position: fixed;
}

.sticky {
  position: sticky;
}

/* 小程序中的显示优化 */
.block {
  display: block;
}

.inline-block {
  display: inline-block;
}

.flex {
  display: flex;
}

.inline-flex {
  display: inline-flex;
}

.hidden {
  display: none;
}

/* Flex布局优化 */
.flex-row {
  flex-direction: row;
}

.flex-col {
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-nowrap {
  flex-wrap: nowrap;
}

.items-start {
  align-items: flex-start;
}

.items-center {
  align-items: center;
}

.items-end {
  align-items: flex-end;
}

.items-stretch {
  align-items: stretch;
}

.justify-start {
  justify-content: flex-start;
}

.justify-center {
  justify-content: center;
}

.justify-end {
  justify-content: flex-end;
}

.justify-between {
  justify-content: space-between;
}

.justify-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

.flex-auto {
  flex: auto;
}

.flex-none {
  flex: none;
}

/* 宽度高度优化 */
.w-full {
  width: 100%;
}

.h-full {
  height: 100%;
}

.w-auto {
  width: auto;
}

.h-auto {
  height: auto;
}

/* 溢出处理 */
.overflow-hidden {
  overflow: hidden;
}

.overflow-visible {
  overflow: visible;
}

.overflow-scroll {
  overflow: scroll;
}

/* 文字对齐 */
.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 文字换行 */
.text-nowrap {
  white-space: nowrap;
}

.text-wrap {
  white-space: normal;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 边框 */
.border {
  border: 1rpx solid #e0e0e0;
}

.border-t {
  border-top: 1rpx solid #e0e0e0;
}

.border-r {
  border-right: 1rpx solid #e0e0e0;
}

.border-b {
  border-bottom: 1rpx solid #e0e0e0;
}

.border-l {
  border-left: 1rpx solid #e0e0e0;
}

.border-none {
  border: none;
